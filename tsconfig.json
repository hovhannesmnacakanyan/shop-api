{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "es6",
    "module": "commonjs",
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2019", "DOM"],
    "allowJs": false,
    "strict": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
